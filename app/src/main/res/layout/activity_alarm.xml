<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityAlarmLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimaryDark">

    <TextView
        android:id="@+id/activityAlarmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/activity_alarm_title"
        android:textAllCaps="true"
        android:textColor="@color/text_medium_emphasis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/activityAlarmCurrentHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/text_high_emphasis"
        android:textSize="@dimen/activity_alarm_current_hour_text_size"
        app:layout_constraintEnd_toEndOf="@+id/activityAlarmTitle"
        app:layout_constraintStart_toStartOf="@+id/activityAlarmTitle"
        app:layout_constraintTop_toBottomOf="@+id/activityAlarmTitle" />

    <TextView
        android:id="@+id/activityAlarmHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/activity_alarm_hint"
        android:textAllCaps="true"
        android:textColor="@color/text_high_emphasis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/activityAlarmCurrentHour"
        app:layout_constraintStart_toStartOf="@+id/activityAlarmCurrentHour"
        app:layout_constraintTop_toBottomOf="@+id/activityAlarmCurrentHour" />

</android.support.constraint.ConstraintLayout>